<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Craig Tv</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    @*<link href="http://vjs.zencdn.net/6.6.3/video-js.css" rel="stylesheet">*@

    <link href="~/Content/video-js.css" rel="stylesheet" />
    <link href="~/App/CSS/Shared/Main.css" rel="stylesheet" />
    @*<script src="http://vjs.zencdn.net/6.6.3/video.js"></script>*@
    <script src="~/Scripts/video.js"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/App/App.js"></script>

    <script src="~/App/Directive/SuperList.js"></script>

    <script src="~/App/Service/YesNoPopupService.js"></script>
    <script src="~/App/Service/InputModelService.js"></script>
    <link href="~/App/CSS/SuperList.css" rel="stylesheet" />
</head>
<body ng-app="superBob">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Craig TV", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Users", "Index", "User")</li>
                    <li>@Html.ActionLink("Video Library", "Index", "VideoLibrary")</li>
                    <li>@Html.ActionLink("PlayLists", "Index", "VideoPlayer")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @*style="width: 95%; padding-left: 2px; margin-left: 2px; padding-right: 8px; margin-right: 8px; "*@
    <div class="container body-content">
        @Html.AntiForgeryToken()
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
